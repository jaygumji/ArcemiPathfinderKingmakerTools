{
  "executable": "Arcemi.SaveGameEditor",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "ArcemiSaveGameEditor",
  "author": "Arcemi",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.Arcemi.SaveGameEditor.app",
    "productName": "Arcemi Save Game Editor",
    "copyright": "Copyright Â© 2025",
    "buildVersion": "2.12.0",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin/Release/net8.0/${os}-${arch}/publish",
        "to": "bin",
        "filter": [
          "**/*",
          "!**/*.pdb",
          "!**/*.xml"
        ]
      }
    ],
    "files": [
      "**/*",
      "!**/*.pdb",
      "!**/*.xml",
      "!**/obj/**",
      "!**/bin/**"
    ]
  }
}
